<?xml version="1.0" encoding="UTF-8"?>
<configuration>
		
	<appender name="plain-stdout" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
		</encoder>
	</appender>

    <logger name="org.springframework" level="INFO" additivity="false">
        <appender-ref ref="plain-stdout"/>
    </logger>
    <logger name="com.enagas.msc" level="TRACE" additivity="false">
        <appender-ref ref="plain-stdout"/>
    </logger>
	<logger name="com.enagas.msc.producto" level="TRACE" additivity="false">
		<appender-ref ref="plain-stdout" />
	</logger>

</configuration>